-extends "bootstrap3/bootstrap3.html"

-load bootstrap3

-block bootstrap3_title
  Voltairine

-block bootstrap3_extra_head
  :css
    div.container {
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      position: absolute;
      display: table;
    }

    .row {
      display: table-cell;
      vertical-align: middle;
    }

    body, html {
      height: 100%;
      margin: 0;
      padding: 0;
    }

    h1 {
      margin-top: 0px;
      margin-bottom: 20px;
    }

-block bootstrap3_content
  .container
    .row
      .col-md-4.col-md-offset-4
        .well
          -block content
