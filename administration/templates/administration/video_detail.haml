-extends "base.haml"

-block head
  %script{src: "{{ STATIC_URL }}mediaelementjs/jquery.js"}
  %script{src: "{{ STATIC_URL }}mediaelementjs/mediaelement-and-player.min.js"}
  %link{rel: "stylesheet", href: "{{ STATIC_URL }}mediaelementjs/mediaelementplayer.min.css"}

-block content
  %h1 Video:
    =object.title
  %hr

  %video{src: "{{ MEDIA_URL }}videos/{{ object.file_name }}", width: "100%", height: "650"}

  %p Nom du film:
    -if object.film_name
      =object.film_name

  %p Realisation:
    -if object.realisation
      =object.realisation

  %p Production:
    -if object.production
      =object.production

  %p Direction photo:
    -if object.photo_direction
      =object.photo_direction

  %p Observations:
    -if object.observations
      =object.observations

  %a{href: "{% url 'administration_video_list' %}"}
