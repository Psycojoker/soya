-extends "base.haml"

-block content
  %h1 Sections
  %hr

  %h2 Tournages
  %ul
    -for subsection in subsection_list
      -if subsection.section == "1"
        %li= subsection.title
    %li
      %form.form-inline
        .form-group
          %input#title.form-control{type: "text", placeholder: "titre"}
        %button.btn.btn-default{type: "submit"}
          Rajouter un nouveau tournage

  %h2 Montages
  %ul
    -for subsection in subsection_list
      -if subsection.section == "2"
        %li= subsection.title
    %li
      %form.form-inline
        .form-group
          %input#title.form-control{type: "text", placeholder: "titre"}
        %button.btn.btn-default{type: "submit"}
          Rajouter un nouveau montage

  %h2 Producteurs
  %ul
    -for subsection in subsection_list
      -if subsection.section == "3"
        %li= subsection.title
    %li
      %form.form-inline
        .form-group
          %input#title.form-control{type: "text", placeholder: "titre"}
        %button.btn.btn-default{type: "submit"}
          Rajouter un nouveau producteur
